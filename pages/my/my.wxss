/* pages/my/my.wxss */
.container{
  display: flex;
  flex-direction:column;
  align-items:center;
  /* width: 100%; */
}
.bg{
  width: 750rpx;
  height: 574rpx;
}
.button-style{
  padding: 0 !important;
  border:none !important;
}
.about-container{
  padding:0 100rpx;
  width: 550rpx;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  position:absolute;
  top:440rpx;
}
.about-us image{
  height: 34rpx;
  width: 34rpx;
}
.about-us{
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:space-between;
}

/* description 描述 */
.description{
  font-size:24rpx;
  color:#999;
}
.about-container > view:nth-child(2){
  margin-top: -5rpx;
}
.avatar{
  width: 120rpx;
  height:120rpx;
  overflow:hidden;
  border-radius:50%;
}

.avatar-position{
  display: flex;
  flex-direction:column;
  position:absolute; 
  top:255rpx;
}
.name{
  position: relative;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
}
.my-img{
  width:120rpx;
  height:120rpx;
}

.avatar-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-container{
  margin-top:30rpx;
  width: 690rpx;
  display: flex;
  flex-direction: row;
  padding:0 30rpx;
  flex-wrap: wrap;
  justify-content: space-between;
}

.preview{
  margin-bottom: 30rpx;
}

.book-num{
  font-size:36rpx;
  color:#000000;
}


.like-container{
  /* margin-top:30rpx; */
  width:100%;
  margin-top: -13rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
}

.headline{
  margin-top:30rpx;
  width:97rpx;
  height:42rpx;
}

.study{
  width:88rpx;
  height:88rpx;
  position: absolute;
  top:40rpx;
  right:45rpx;
}

.test{
  background-color: red !important;
  border-radius: 15px !important;
}


